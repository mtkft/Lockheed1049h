<?xml version="1.0"?>

<PropertyList>
  <name>Lockheed1049h-menu</name>
  <modal>false</modal>
  <layout>vbox</layout>

  <group>
    <layout>hbox</layout>
    <empty><stretch>1</stretch></empty>
    <text>
      <label>Preferences</label>
    </text>
    <empty><stretch>1</stretch></empty>
    <button>
      <pref-width>16</pref-width>
      <pref-height>16</pref-height>
      <legend></legend>
      <default>1</default>
      <keynum>27</keynum>
      <border>2</border>
      <binding>
        <command>dialog-close</command>
      </binding>
      <binding>
        <command>dialog-apply</command>
      </binding>
    </button>
  </group>
  <hrule><dummy/></hrule>

  <group>
    <layout>hbox</layout>
    <default-padding>10</default-padding>
    <group>
      <layout>vbox</layout>
      <default-padding>1</default-padding>
        <text>
          <halign>left</halign>
          <label>DOORS</label>
        </text>
      <group>
        <layout>hbox</layout>
        <default-padding>5</default-padding>
        <text>
          <halign>left</halign>
          <label>Crew Door Open</label>
        </text>
        <checkbox>
          <halign>right</halign>
          <property>controls/door-crew/position-norm</property>
          <binding>
            <command>nasal</command>
            <script>Lockheed1049h.door_crew.toggle()</script>
          </binding>
        </checkbox>
      </group>
    </group>
  </group>
  <hrule><dummy/></hrule>

  <group>
    <layout>hbox</layout>
    <default-padding>10</default-padding>
    <group>
      <layout>vbox</layout>
      <default-padding>1</default-padding>
      <text>
        <halign>left</halign>
        <label>EQUIPMENT</label>
      </text>
      <group>
        <layout>hbox</layout>
        <default-padding>5</default-padding>
        <text>
          <halign>left</halign>
          <label>Hide Yokes</label>
        </text>
        <checkbox>
          <halign>right</halign>
          <property>sim/model/options/hide-yokes</property>
          <binding>
            <command>property-toggle</command>
            <property>sim/model/options/hide-yokes</property>
          </binding>
        </checkbox>
      </group>
      <group>
        <layout>hbox</layout>
        <default-padding>5</default-padding>
        <text>
          <halign>left</halign>
          <label>Hide Dice</label>
        </text>
        <checkbox>
          <halign>right</halign>
          <property>sim/model/options/hide-dice</property>
          <binding>
            <command>property-toggle</command>
            <property>sim/model/options/hide-dice</property>
          </binding>
        </checkbox>
      </group>
      <group>
        <layout>hbox</layout>
        <default-padding>5</default-padding>
        <text>
          <halign>left</halign>
          <label>Show Heading Bug</label>
        </text>
        <checkbox>
          <halign>right</halign>
          <property>sim/model/options/show-heading-bug</property>
          <binding>
            <command>property-toggle</command>
            <property>sim/model/options/show-heading-bug</property>
          </binding>
        </checkbox>
      </group>
    </group>
  </group>
  <hrule><dummy/></hrule>

  <group>
    <layout>hbox</layout>
    <default-padding>10</default-padding>
    <group>
      <layout>vbox</layout>
      <default-padding>1</default-padding>
      <text>
        <halign>left</halign>
        <label>SEAT AND VIEW POSITION</label>
      </text>
      <group>
        <layout>vbox</layout>
        <default-padding>0</default-padding>
        <group>
          <layout>hbox</layout>
          <default-padding>5</default-padding>
          <text>
            <halign>left</halign>
            <label>Seat Down-Up</label>
          </text>
          <slider>
            <halign>right</halign>
            <property>sim/current-view/y-offset-m</property>
            <binding>
              <condition>
                <equals>
                  <property>sim/current-view/view-number</property>
                  <value>0</value>
                </equals>
              </condition>
              <command>dialog-apply</command>
            </binding>
            <binding>
              <condition>
                <equals>
                  <property>sim/current-view/view-number</property>
                  <value>0</value>
                </equals>
              </condition>
              <command>nasal</command>
              <script>Lockheed1049h.seat_pilot_update();</script>
            </binding>
            <min>1.14</min>
            <max>1.34</max>
          </slider>
        </group>
        <group>
          <layout>vbox</layout>
          <default-padding>0</default-padding>
          <group>
            <layout>hbox</layout>
            <default-padding>5</default-padding>
            <text>
              <halign>left</halign>
              <label>Seat Forward-Back</label>
            </text>
            <slider>
              <halign>right</halign>
              <property>sim/current-view/z-offset-m</property>
              <binding>
                <condition>
                  <equals>
                    <property>sim/current-view/view-number</property>
                    <value>0</value>
                  </equals>
                </condition>
                <command>dialog-apply</command>
              </binding>
              <binding>
                <condition>
                  <equals>
                    <property>sim/current-view/view-number</property>
                    <value>0</value>
                  </equals>
                </condition>
                <command>nasal</command>
                <script>Lockheed1049h.seat_pilot_update();</script>
              </binding>
              <min>2.79</min>
              <max>2.99</max>
            </slider>
          </group>
        </group>
        <group>
          <layout>vbox</layout>
          <default-padding>0</default-padding>
          <group>
            <layout>hbox</layout>
            <default-padding>5</default-padding>
            <text>
              <halign>left</halign>
              <label>View Look Down-Up</label>
            </text>
            <slider>
              <halign>right</halign>
              <property>sim/current-view/pitch-offset-deg</property>
              <binding>
                <condition>
                  <equals>
                    <property>sim/current-view/view-number</property>
                    <value>0</value>
                  </equals>
                </condition>
                <command>dialog-apply</command>
              </binding>
              <binding>
                <condition>
                  <equals>
                    <property>sim/current-view/view-number</property>
                    <value>0</value>
                  </equals>
                </condition>
                <command>nasal</command>
                <script>Lockheed1049h.seat_pilot_update();</script>
              </binding>
              <min>-15</min>
              <max>0</max>
            </slider>
          </group>
        </group>
        <group>
          <layout>vbox</layout>
          <default-padding>5</default-padding>
          <button>
            <legend>Reset to defaults</legend>
            <halign>right</halign>
            <binding>
              <condition>
                <equals>
                  <property>sim/current-view/view-number</property>
                  <value>0</value>
                </equals>
              </condition>
              <command>nasal</command>
              <script>Lockheed1049h.seat_pilot_defaults();</script>
            </binding>
            <binding>
              <command>dialog-update</command>
            </binding>
          </button>
        </group>
      </group>
    </group>
  </group>
  <hrule><dummy/></hrule>

  <group>
    <layout>hbox</layout>
    <button>
      <legend>Close</legend>
      <default>true</default>
      <key>Esc</key>
      <padding>5</padding>
      <binding>
        <command>dialog-apply</command>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
    <button>
      <legend>Help</legend>
      <key>h</key>
      <binding>
        <command>nasal</command>
        <script>gui.showHelpDialog("/sim/help")</script>
      </binding>
      <binding>
        <command>dialog-close</command>
      </binding>
    </button>
  </group>

</PropertyList>


