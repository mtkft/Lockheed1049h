    <input>
      <condition>
        <property>instrumentation/deviation-indicator/frequency</property>
      </condition>
      <property>instrumentation/nav[1]/radials/selected-deg</property>
    </input>
    <output>instrumentation/navx/radials/selected-deg</output>
  </filter>
  
  <filter>
