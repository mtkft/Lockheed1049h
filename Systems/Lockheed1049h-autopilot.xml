<?xml version="1.0"?>

<!-- Lockheed 1049h Custom Autopilot -->
<!-- Copyright (c) 2021 Josh Davidson (Octal450) -->

<PropertyList>
	
	<!-- Drivers -->
	<filter>
		<name>Heading Error Deg</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<input>
			<property>/autopilot/settings/heading-bug-deg</property>
			<offset>
				<property>/orientation/heading-magnetic-deg</property>
				<scale>-1.0</scale>
			</offset>
		</input>
		<output>/autopilot/internal/heading-error-deg</output>
		<period>
			<min>-180</min>
			<max>180</max>
		</period>
	</filter>
	
	<flipflop> <!-- Author: Richard Senior -->
		<name>Wing Leveler Heading Hold</name>
		<debug>false</debug>
		<type>SR</type>
		<S>
			<and>
				<equals>
					<property>/autopilot/locks/heading</property>
					<value>wing-leveler</value>
				</equals>
				<less-than>
					<expression>
						<abs><property>/autopilot/settings/target-bank-deg</property></abs>
					</expression>
					<value>1.0</value>
				</less-than>
				<less-than>
					<expression>
						<abs><property>/orientation/roll-deg</property></abs>
					</expression>
					<value>1.0</value>
				</less-than>
			</and>
		</S>
		<R>
			<or>
				<not-equals>
					<property>/autopilot/locks/heading</property>
					<value>wing-leveler</value>
				</not-equals>
				<greater-than-equals>
					<expression>
						<abs><property>/autopilot/settings/target-bank-deg</property></abs>
					</expression>
					<value>1.0</value>
				</greater-than-equals>
			</or>
		</R>
		<output>/autopilot/internal/wing-leveler-heading-hold</output>
	</flipflop>
	
	<!-- Roll Axis -->
	<filter>
		<name>IT-CONTROLLER: Bank Angle Select</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<and>
					<equals>
						<property>/autopilot/locks/heading</property>
						<value>wing-leveler</value>
					</equals>
					<not><property>/autopilot/internal/wing-leveler-heading-hold</property></not>
				</and>
			</condition>
		</enable>
		<input>/autopilot/settings/target-bank-deg</input>
		<output>/autopilot/internal/target-roll-deg</output>
	</filter>
	
	<filter>
		<name>IT-CONTROLLER: Heading/LNAV</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>
			<expression>
				<table>
					<property>/velocities/airspeed-kt</property>
					<entry><ind>130</ind><dep>0.8</dep></entry>
					<entry><ind>300</ind><dep>2.5</dep></entry>
				</table>
			</expression>
		</gain>
		<enable>
			<condition>
				<or>
					<equals>
						<property>/autopilot/locks/heading</property>
						<value>dg-heading-hold</value>
					</equals>
					<property>/autopilot/internal/wing-leveler-heading-hold</property>
				</or>
			</condition>
		</enable>
		<input>/autopilot/internal/heading-error-deg</input>
		<reference>0</reference>
		<output>/autopilot/internal/target-roll-deg</output>
		<min>
			<property>/controls/autoflight/bank-angle-select</property>
			<scale>-1.0</scale>
		</min>
		<max>/controls/autoflight/bank-angle-select</max>
	</filter>
	
	<filter>
		<name>System Command: Roll Target Inactive Sync</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>1.0</gain>
		<enable>
			<condition>
				<equals>
					<property>autopilot/locks/heading</property>
					<value></value>
				</equals>
			</condition>
		</enable>
		<input>/orientation/roll-deg</input>
		<output>/autopilot/internal/target-roll-deg</output>
		<min>
			<property>/controls/autoflight/bank-angle-select</property>
			<scale>-1.0</scale>
		</min>
		<max>/controls/autoflight/bank-angle-select</max>
	</filter>
	
	<filter>
		<name>System Command: Target Roll Filter</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<input>/autopilot/internal/target-roll-deg</input>
		<output>/autopilot/internal/target-roll</output>
		<max-rate-of-change>
			<condition>
				<not-equals>
					<property>autopilot/locks/heading</property>
					<value></value>
				</not-equals>
			</condition>
			<value>6</value>
		</max-rate-of-change>
		<max-rate-of-change>50</max-rate-of-change>
	</filter>
	
	<filter>
		<name>System Command: Roll Rate Target</name>
		<debug>false</debug>
		<type>gain</type>
		<gain>-0.6</gain>
		<input>/orientation/roll-deg</input>
		<reference>/autopilot/internal/target-roll</reference>
		<output>/autopilot/internal/roll-rate</output>
		<min>-4</min>
		<max>4</max>
	</filter>
	
	<pid-controller>
		<name>System Command: Aileron</name>
		<debug>false</debug>
		<enable>
			<condition>
				<not-equals>
					<property>autopilot/locks/heading</property>
					<value></value>
				</not-equals>
			</condition>
		</enable>
		<input>/orientation/roll-rate-degps</input>
		<reference>/autopilot/internal/roll-rate</reference>
		<output>/autopilot/internal/aileron-cmd</output>
		<config>
			<Kp>
				<expression>
					<table>
						<property>/velocities/airspeed-kt</property>
						<entry><ind>130</ind><dep>0.08</dep></entry>
						<entry><ind>300</ind><dep>0.02</dep></entry>
					</table>
				</expression>
			</Kp>
			<Ti>1.0</Ti>
			<Td>0.0001</Td>
			<u_min>-1.0</u_min>
			<u_max>1.0</u_max>
		</config>
	</pid-controller>
	
	<filter>
		<name>System Command: Aileron Filter</name>
		<debug>false</debug>
		<type>noise-spike</type>
		<feedback-if-disabled>true</feedback-if-disabled>
		<initialize-to>output</initialize-to>
		<enable>
			<condition>
				<not-equals>
					<property>autopilot/locks/heading</property>
					<value></value>
				</not-equals>
			</condition>
		</enable>
		<input>/autopilot/internal/aileron-cmd</input>
		<output>/controls/flight/aileron</output>
		<max-rate-of-change>1.2</max-rate-of-change>
	</filter>
	
	<!-- END REWORK 2021 BY JOSH DAVIDSON (OCTAL450) -->

  <!-- =============================================================== -->
  <!-- Servos                                                          -->
  <!-- =============================================================== -->

  <filter>
    <name>Elevator Trim Servo</name>
    <debug>false</debug>
    <feedback-if-disabled>true</feedback-if-disabled>
    <enable>
      <condition>
        <not>
          <equals>
            <property>autopilot/locks/altitude</property>
            <value></value>
          </equals>
        </not>
      </condition>
    </enable>
    <input>autopilot/internal/servos/elevator-trim</input>
    <output>controls/flight/elevator-trim</output>
    <type>noise-spike</type>
    <max-rate-of-change>0.25</max-rate-of-change>
    <min>-1.0</min>
    <max>1.0</max>
  </filter>

  <!-- =============================================================== -->
  <!-- Pitch Axis Modes                                                -->
  <!-- =============================================================== -->

  <pid-controller>
    <name>Pitch hold</name>
    <debug>false</debug>
    <enable>
      <condition>
        <equals>
          <property>autopilot/locks/altitude</property>
          <value>pitch-hold</value>
        </equals>
      </condition>
    </enable>
    <input>orientation/pitch-deg</input>
    <reference>autopilot/internal/filtered-target-pitch-deg</reference>
    <output>autopilot/internal/servos/elevator-trim</output>
    <config>
      <Kp>-0.2</Kp>
      <Ti>40.0</Ti>
      <Td>0.0001</Td>
      <u_min>-1.0</u_min>
      <u_max>1.0</u_max>
    </config>
  </pid-controller>

  <pid-controller>
    <name>Vertical Speed Hold</name>
    <debug>false</debug>
    <enable>
      <condition>
        <equals>
          <property>autopilot/locks/altitude</property>
          <value>vertical-speed-hold</value>
        </equals>
      </condition>
    </enable>
    <input>velocities/vertical-speed-fps</input>
    <reference>
      <property>autopilot/settings/vertical-speed-fpm</property>
      <scale>0.01667</scale>
    </reference>
    <output>autopilot/internal/servos/elevator-trim</output>
    <config>
      <Kp>-0.01</Kp>
      <Ti>40.0</Ti>
      <Td>0.0001</Td>
      <u_min>-1.0</u_min>
      <u_max>1.0</u_max>
    </config>
  </pid-controller>

  <pi-simple-controller>
    <name>Climb Rate Computer (not route-manager)</name>
    <debug>false</debug>
    <enable>
      <condition>
        <and>
          <or>
            <equals>
              <property>autopilot/locks/altitude</property>
              <value>altitude-hold</value>
            </equals>
            <and>
              <equals>
                <property>autopilot/locks/altitude</property>
                <value>gs1-hold</value>
              </equals>
              <equals>
                <property>autopilot/internal/gs-captured</property>
                <value>0</value>
              </equals>
            </and>
          </or>
          <not-equals>
            <property>autopilot/locks/heading</property>
            <value>true-heading-hold</value>
          </not-equals>
        </and>
      </condition>
    </enable>
    <input>instrumentation/altimeter/indicated-altitude-ft</input>
    <reference>autopilot/settings/target-altitude-ft</reference>
    <output>autopilot/internal/target-climb-rate-fps</output>
    <config>
      <Kp>0.15</Kp>
      <Ki>0.005</Ki>
      <min>-6.67</min>
      <max>6.67</max>
    </config>
  </pi-simple-controller>

  <pi-simple-controller>
    <name>Climb Rate Computer (route-manager)</name>
    <debug>false</debug>
    <enable>
      <condition>
        <and>
          <or>
            <equals>
              <property>autopilot/locks/altitude</property>
              <value>altitude-hold</value>
            </equals>
            <and>
              <equals>
                <property>autopilot/locks/altitude</property>
                <value>gs1-hold</value>
              </equals>
              <equals>
                <property>autopilot/internal/gs-captured</property>
                <value>0</value>
              </equals>
            </and>
          </or>
          <equals>
            <property>autopilot/locks/heading</property>
            <value>true-heading-hold</value>
          </equals>
        </and>
      </condition>
    </enable>
    <input>instrumentation/altimeter/indicated-altitude-ft</input>
    <reference>autopilot/settings/target-altitude-ft</reference>
    <output>autopilot/internal/target-climb-rate-fps</output>
    <config>
      <Kp>0.12</Kp>
      <Ki>0.005</Ki>
      <min>-16.67</min>
      <max>16.67</max>
    </config>
  </pi-simple-controller>

  <pid-controller>
    <name>Altitude Hold</name>
    <debug>false</debug>
    <enable>
      <condition>
        <or>
          <equals>
            <property>autopilot/locks/altitude</property>
            <value>altitude-hold</value>
          </equals>
          <equals>
            <property>autopilot/locks/altitude</property>
            <value>agl-hold</value>
          </equals>
          <and>
            <equals>
              <property>autopilot/locks/altitude</property>
              <value>gs1-hold</value>
            </equals>
            <equals>
              <property>autopilot/internal/gs-captured</property>
              <value>0</value>
            </equals>
          </and>
        </or>
      </condition>
    </enable>
    <input>velocities/vertical-speed-fps</input>
    <reference>autopilot/internal/target-climb-rate-fps</reference>
    <output>autopilot/internal/servos/elevator-trim</output>
    <config>
      <Kp>-0.01</Kp>
      <Ti>30.0</Ti>
      <Td>0.0001</Td>
      <u_min>-1.0</u_min>
      <u_max>1.0</u_max>
    </config>
  </pid-controller>

  <pid-controller>
    <name>Glideslope Hold</name>
    <debug>false</debug>
    <enable>
      <condition>
        <and>
          <equals>
            <property>autopilot/locks/altitude</property>
            <value>gs1-hold</value>
          </equals>
          <equals>
            <property>autopilot/internal/gs-captured</property>
            <value>1</value>
          </equals>
        </and>
      </condition>
    </enable>
    <input>velocities/vertical-speed-fps</input>
    <reference>instrumentation/navx/gs-rate-of-climb</reference>
    <output>autopilot/internal/servos/elevator-trim</output>
    <config>
      <Kp>-0.01</Kp>
      <Ti>40.0</Ti>
      <Td>0.0001</Td>
      <u_min>-1.0</u_min>
      <u_max>1.0</u_max>
    </config>
  </pid-controller>

  <!-- =============================================================== -->
  <!-- Velocity Modes                                                  -->
  <!-- =============================================================== -->

  <pid-controller>
    <name>Auto Throttle</name>
    <debug>false</debug>
    <enable>
      <condition>
        <equals>
          <property>autopilot/locks/speed</property>
          <value>speed-with-throttle</value>
        </equals>
      </condition>
    </enable>
    <input>velocities/airspeed-kt</input>
    <reference>autopilot/settings/target-speed-kt</reference>
    <output>
      <property>controls/engines/engine[0]/throttle</property>
      <property>controls/engines/engine[1]/throttle</property>
      <property>controls/engines/engine[2]/throttle</property>
      <property>controls/engines/engine[3]/throttle</property>
    </output>
    <config>
      <Kp>0.05</Kp>
      <Ti>20.0</Ti>
      <Td>0.0005</Td>
      <u_min>0.0</u_min>
      <u_max>1.0</u_max>
    </config>
  </pid-controller>
  
  <pid-controller>
    <name>Cruise speed by prop</name>
    <debug>false</debug>
    <enable>
      <condition>
        <property>autoengineer/allow-speedbyprop</property>
      </condition>
    </enable>
    <input>velocities/airspeed-kt</input>
    <reference>autoengineer/speedbyprop</reference>
    <output>
      <property>controls/engines/engine[0]/propeller-pitch</property>
      <property>controls/engines/engine[1]/propeller-pitch</property>
      <property>controls/engines/engine[2]/propeller-pitch</property>
      <property>controls/engines/engine[3]/propeller-pitch</property>
    </output>
    <config>
      <Kp>0.05</Kp>
      <Ti>20.0</Ti>
      <Td>0.0005</Td>
      <u_min>0.0</u_min>
      <u_max>1.0</u_max>
    </config>
  </pid-controller>
  
  <pid-controller>
    <name>Hold manifold pressure (Engine #1)</name>
    <debug>false</debug>
    <enable>
      <condition>
        <greater-than>
          <expression><property>autoengineer/holdmp</property></expression>
          <value>0</value>
        </greater-than>
      </condition>
    </enable>
    <input>engines/engine[0]/mp-inhg</input>
    <reference>autoengineer/holdmp</reference>
    <output>
      <property>controls/engines/engine[0]/throttle</property>
    </output>
    <config>
      <Kp>0.5</Kp>
      <Ti>1</Ti>
      <Td>0.0005</Td>
      <u_min>0.0</u_min>
      <u_max>1.0</u_max>
    </config>
  </pid-controller>
  
  <pid-controller>
    <name>Hold manifold pressure (Engine #2)</name>
    <debug>false</debug>
    <enable>
      <condition>
        <greater-than>
          <expression><property>autoengineer/holdmp</property></expression>
          <value>0</value>
        </greater-than>
      </condition>
    </enable>
    <input>engines/engine[1]/mp-inhg</input>
    <reference>autoengineer/holdmp</reference>
    <output>
      <property>controls/engines/engine[1]/throttle</property>
    </output>
    <config>
      <Kp>0.5</Kp>
      <Ti>1</Ti>
      <Td>0.0005</Td>
      <u_min>0.0</u_min>
      <u_max>1.0</u_max>
    </config>
  </pid-controller>
  
  <pid-controller>
    <name>Hold manifold pressure (Engine #3)</name>
    <debug>false</debug>
    <enable>
      <condition>
        <greater-than>
          <expression><property>autoengineer/holdmp</property></expression>
          <value>0</value>
        </greater-than>
      </condition>
    </enable>
    <input>engines/engine[2]/mp-inhg</input>
    <reference>autoengineer/holdmp</reference>
    <output>
      <property>controls/engines/engine[2]/throttle</property>
    </output>
    <config>
      <Kp>0.5</Kp>
      <Ti>1</Ti>
      <Td>0.0005</Td>
      <u_min>0.0</u_min>
      <u_max>1.0</u_max>
    </config>
  </pid-controller>
  
  <pid-controller>
    <name>Hold manifold pressure (Engine #4)</name>
    <debug>false</debug>
    <enable>
      <condition>
        <greater-than>
          <expression><property>autoengineer/holdmp</property></expression>
          <value>0</value>
        </greater-than>
      </condition>
    </enable>
    <input>engines/engine[3]/mp-inhg</input>
    <reference>autoengineer/holdmp</reference>
    <output>
      <property>controls/engines/engine[3]/throttle</property>
    </output>
    <config>
      <Kp>0.5</Kp>
      <Ti>1</Ti>
      <Td>0.0005</Td>
      <u_min>0.0</u_min>
      <u_max>1.0</u_max>
    </config>
  </pid-controller>
  

  <!-- =============================================================== -->
  <!-- Untested                                                        -->
  <!-- =============================================================== -->

  <pi-simple-controller>
    <name>AGL Hold Stage 1</name>
    <debug>false</debug>
    <enable>
      <condition>
        <equals>
          <property>autopilot/locks/altitude</property>
          <value>agl-hold</value>
        </equals>
      </condition>
    </enable>
    <input>position/altitude-agl-ft</input>
    <reference>autopilot/settings/target-agl-ft</reference>
    <output>autopilot/internal/target-climb-rate-fps</output>
    <config>
      <Kp>0.12</Kp>
      <Ki>0.0</Ki>
      <u_min>-16.6667</u_min>
      <u_max>16.6667</u_max>
    </config>
  </pi-simple-controller>

  <pid-controller>
    <name>AOA hold</name>
    <debug>false</debug>
    <enable>
      <condition>
        <equals>
          <property>autopilot/locks/altitude</property>
          <value>aoa-hold</value>
        </equals>
      </condition>
    </enable>
    <input>orientation/alpha-deg</input>
    <reference>autopilot/settings/target-aoa-deg</reference>
    <output>autopilot/internal/servos/elevator-trim</output>
    <config>
      <Kp>-0.05</Kp>
      <Ti>0.5</Ti>
      <Td>0.00001</Td>
      <u_min>-1.0</u_min>
      <u_max>1.0</u_max>
    </config>
  </pid-controller>

  <pid-controller>
    <name>Speed Pitch Trim Stage 1</name>
    <debug>false</debug>
    <enable>
      <condition>
        <equals>
          <property>autopilot/locks/altitude</property>
          <value>speed-with-pitch-trim</value>
        </equals>
      </condition>
    </enable>
    <input>velocities/airspeed-kt</input>
    <reference>autopilot/settings/target-speed-kt</reference>
    <output>autopilot/settings/target-pitch-deg</output>
    <config>
      <Kp>-0.1</Kp>
      <Ti>30.0</Ti>
      <Td>0.0001</Td>
      <u_min>-5.0</u_min>
      <u_max>5.0</u_max>
    </config>
  </pid-controller>

  <pid-controller>
    <name>Speed Pitch Trim Stage 2</name>
    <debug>false</debug>
    <enable>
      <condition>
        <equals>
          <property>autopilot/locks/altitude</property>
          <value>speed-with-pitch-trim</value>
        </equals>
      </condition>
    </enable>
    <input>orientation/pitch-deg</input>
    <reference>autopilot/settings/target-pitch-deg</reference>
    <output>autopilot/internal/servos/elevator-trim</output>
    <config>
      <Kp>-0.05</Kp>
      <Ti>1.0</Ti>
      <Td>0.00001</Td>
      <u_min>-1.0</u_min>
      <u_max>1.0</u_max>
    </config>
  </pid-controller>

</PropertyList>
