<?xml version="1.0"?>
<!-- Control positions, based on trim settings instrument, useful for keyboard flying (2" version) -->

<PropertyList>

  <path>control_positions_sm.ac</path>

  <animation>
    <type>material</type>
    <object-name>Controls.Face</object-name>
    <object-name>Controls.NeedleEl</object-name>
    <object-name>Controls.NeedleRud</object-name>
    <object-name>Controls.NeedleAil</object-name>
    <emission>
      <red>0.8</red>
      <green>0.4</green>
      <blue>0.2</blue>
      <factor-prop>/controls/lighting/panel-norm</factor-prop>
    </emission>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>Controls.NeedleEl</object-name>
    <property>controls/flight/elevator</property>
    <factor>0.0085</factor>
    <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>Controls.NeedleRud</object-name>
    <property>controls/flight/rudder</property>
    <factor>0.0085</factor>
    <axis>
      <x>0</x>
      <y>1</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>Controls.NeedleAil</object-name>
    <property>controls/flight/aileron</property>
    <interpolation>
      <entry><ind>-1</ind><dep>-30</dep></entry>
      <entry><ind> 0</ind><dep>  0</dep></entry>
      <entry><ind> 1</ind><dep> 30</dep></entry>
    </interpolation>
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

</PropertyList>
